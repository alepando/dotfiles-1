#!/usr/bin/env brew bundle
# -*- mode: sh; fill-column: 72 -*-

# Cask
install brew-cask               # install standard OSX-bundled apps,
tap caskroom/cask               # no compilation necessary

# tap homebrew/dupes            # I'm not sure these are necessary
# tap homebrew/science

# PRogramming Languages
install clisp                   # common lisp
install haskell-platform
install m4
install lua
install mysql
install node                    # node.js
install python
install python3
install ruby
install scala
install leiningen               # clojure

# UNIX Tools
install coreutils
install ctags
install fortune
install gcc
install help2man
install imagemagick
install pdf-tools
install surfraw                 # internet searching from the cli
install terminal-notifier
install the_silver_searcher
install tree
install watch
install wget

# VCS Systems
install mercurial

install gmp                     # fast math
install gource                  # VCS visualization
install macvim
cask install macvim

# Emacs
install ispell
install libpng
install librsvg
install libtiff
install gnupg
install gnupg2
install gnutls
install emacs
cask install emacs
install doxymacs

# TeX
cask install mactex
install ghostscript

# Git Tools
install git
cask install gitbook
cask install gitter

# Support Software
cask install bettertouchtool
